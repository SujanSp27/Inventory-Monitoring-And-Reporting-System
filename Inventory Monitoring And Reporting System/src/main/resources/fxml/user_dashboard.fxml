<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.inventory.controller.UserController"
            stylesheets="@../css/style.css">

    <top>
        <ToolBar styleClass="top-bar">
            <Label text="ðŸ™â€â™‚ï¸ User Dashboard" styleClass="title-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogout" styleClass="btn-exit"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="8">
                <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
                <Label text="ðŸ” Search:"/>
                <TextField fx:id="txtSearch" promptText="Type to search..." HBox.hgrow="ALWAYS"/>
                <Label text="ðŸ’° Price Range:"/>
                <TextField fx:id="txtMinPrice" promptText="Min" prefWidth="60"/>
                <TextField fx:id="txtMaxPrice" promptText="Max" prefWidth="60"/>
                <Button text="Filter" onAction="#onFilterPrice" styleClass="btn-secondary"/>
            </HBox>

            <TableView fx:id="tableView">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
                    <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <Label fx:id="lblStatus" styleClass="status-bar">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </Label>
    </bottom>
</BorderPane>
